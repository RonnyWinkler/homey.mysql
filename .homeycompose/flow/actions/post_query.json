                "en": "INSERT INTO table_name (column1, column2, ...) VALUES (value1, value2, ...);"
            },
            "title": {
                "en": "SQL query",
                "de": "SQL-Befehl"
            }
        },
        {
            "name": "id",
            "type": "text",
